<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="iconTint">@color/md_theme_light_primary</item>
        <!--        <item name="android:iconTint">@color/md_theme_dark_secondaryContainer</item>-->


        <!--   ActionMode     //////////////////////////////////////////////////////-->
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_check</item>
        <item name="actionModeBackground">@color/md_theme_light_onErrorContainer</item>
        <item name="windowActionModeOverlay">true</item>


        <!--      BottomNav  //////////////////////////////////////////////////////-->

        <item name="bottomNavigationStyle">
            @style/Widget.Material3.BottomNavigationView.ActiveIndicator
        </item>


    </style>

    <style name="bodyMediumPrimaryContainer" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <style name="actionModeDark" parent="@style/Widget.AppCompat.ActionMode"></style>

    <style name="BottomSheetDialogThemeNoFloating" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="colorContainer">@color/md_theme_light_secondaryContainer</item>
    </style>


    <!-- Nie dziala chuja dziala to  //////////////////////////////////////////////////////-->
    <style name="mSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbIconTint">@color/md_theme_light_secondary</item>
        <item name="state_with_icon">true</item>

    </style>

    <style name="detailsToolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="navigationIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="titleTextColor">@color/md_theme_light_onSurfaceVariant</item>

    </style>




    <!--        //////////////////////////////////////////////////////-->
    <style name="recipeItemIcons">
        <item name="android:tint">@color/md_theme_light_secondary</item>
    </style>

    <style name="recipeCountTextView" parent="@style/TextAppearance.Material3.LabelLarge">

    </style>


    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/design_default_color_primary_variant</item>
        <item name="tabIndicatorColor">@color/design_default_color_secondary_variant</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/design_default_color_secondary_variant</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>